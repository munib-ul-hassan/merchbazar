<% layout('layouts/adminLayout') -%>
<%-block('title','<title> Shipping Address   </title>')%>


<div class="container">
    <ol class="breadcrumb text-muted fs-6 fw-semibold">
        <li class="breadcrumb-item"><a href="#" class="">Admin</a></li>
        <li class="breadcrumb-item"><a href="#" class="">Shipping Address</a></li>
    </ol>
    <div class="bg-white mt-3">
        <table id="kt_datatable_column_rendering" class="table table-striped table-row-bordered gy-5 gs-7">
            <thead>
                <tr class="fw-semibold fs-6 text-gray-800">
                    <th>firstName</th>
                    <th>lastName</th>
                    <th>addressLine1</th>
                    <th>addressLine2</th>
                    <th>country</th>
                    <th>zip</th>
                    <th>state</th>
                    <th>city</th>
                </tr>
            </thead>
            <tbody>
				<% shippingData.forEach(item => { %>
					<tr>
						<td><%- item.firstName  %></td>
						<td><%- item.lastName  %></td>
						<td><%- item.addressLine1  %></td>
						<td><%- item.addressLine2  %></td>
						<td><%- item.country  %></td>
						<td><%- item.zip  %></td>
						<td><%- item.state  %></td>
						<td><%- item.city
							%></td>
					</tr>
				<% }) %>
            </tbody>
        </table>
    </div>
</div>

<script>
    var status = {
				1: {"title": "Pending", "state": "primary"},
				2: {"title": "Delivered", "state": "danger"},
				3: {"title": "Canceled", "state": "primary"},
				4: {"title": "Success", "state": "success"},
				5: {"title": "Info", "state": "info"},
				6: {"title": "Danger", "state": "danger"},
				7: {"title": "Warning", "state": "warning"},
			};

			$("#kt_datatable_fixed_header").DataTable({
				"fixedHeader": {
					"header":true
				},
				"columnDefs": [
					{
						// The `data` parameter refers to the data for the cell (defined by the
						// `data` option, which defaults to the column being worked with, in
						// this case `data: 0`.
						"render": function ( data, type, row ) {
							var index = KTUtil.getRandomInt(1, 7);

							return data + '<span class="ms-2 badge badge-light-' + status[index]['state'] + ' fw-semibold">' + status[index]['title'] + '</span>';
						},
						"targets": 1
					}
				]
			});
</script>