      <div class="col-lg-9 after">
        <div class="row">
          <div class="col-12">
            <form action="/marketplace-design" class="search-form">
              <div class="row g-0">
                <div class="col-10">
                  <input type="text" class="form-control" placeholder="Search by title" name="search" value="<%= searchQuery %>">
                </div>
                <div class="col-2">
                  <button type="submit" class="my-btn text-center p-0"><i class="fa-solid fa-magnifying-glass"></i></button>
                </div>
              </div>
            </form>
            <div class="d-flex mt-4 w-100 align-items-center justify-content-between">
              <p class="mb-0">Showing 09 of 420 results</p>
              <form action="/marketplace-design" class="sorting-form">
                <select name="sorting" id="sorting" class="form-control form-select" onchange="this.form.submit()">
                  <option value="">Default Sorting</option>
                  <option value="popularity">Sorting by popularity</option>
                  <option value="latest">Sorting By Latest</option>
                  <option value="lowToHigh">Sorting By Price: low to high</option>
                  <option value="highToLow">Sorting By Price: high to low</option>
                </select>
              </form>

            </div>
          </div>
        </div>
        <div class="row mt-5">
          <% if (ProductData.length===0) { %>
          <div class="col-12">
            <p>No products found.</p>
          </div>
          <% } else { %>
          <% for (let i=0; i < ProductData.length; i++) { %>
          <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
            <div class="product-box">
              
          <a href='/marketplace-design/<%- ProductData[i]?._id %>'>

                <div class="image">
                  <img src="<%- `${ProductData[i].designImage}`  %>" alt="" class="img-fluid">
                </div>
              </a>
              <div class="text d-flex align-items-center justify-content-between">
                <div class="info">
                  <h6><a href="/desgin-detail/<%- ProductData[i]._id -%>">
                      <%= ProductData[i].title %>
                    </a></h6>
                  <!-- <span>by <a href="#">
                                                                <%= ProductData[i].brand %>
                                                            </a></span> -->
                  <p class="price">PKR <%= ProductData[i].designPrice %>
                  </p>
                </div>
                <a href="#"><i class="fa-regular fa-heart"></i></a>
              </div>
            </div>
          </div>
          <% } %>
          <% } %>


        </div>
        <div class="row mt-5">
          <div class="col-12">
            <nav aria-label="Page navigation example">
              <ul class="pagination flex-wrap justify-content-center rounded-0">
                <% if (currentPage > 1) { %>
                <li class="page-item">
                  <a class="page-link" href="/marketplace-design?page=<%= currentPage - 1 %>&search=<%= searchQuery %>" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                  </a>
                </li>
                <% } %>
                <% for(let i=startPage; i<=endPage; i++) { %>
                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                  <a class="page-link" href="/marketplace-design?page=<%= i %>&search=<%= searchQuery %>">
                    <%= i %>
                  </a>
                </li>
                <% } %>
                <% if (currentPage < totalPages) { %>
                <li class="page-item">
                  <a class="page-link" href="/marketplace-design?page=<%= currentPage + 1 %>&search=<%= searchQuery %>" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                  </a>
                </li>
                <% } %>
              </ul>
            </nav>

          </div>
        </div>
      </div>
